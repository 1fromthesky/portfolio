.social {
   display: flex;
   align-items: center;

   &__item {
      margin-right: 30Px;
      
      &:last-child {
         margin-right: 0;
      }
   }

   &__link {
      width: 25px;
      height: 25px;

      &:hover .social__svg {
         fill: $main;
      }
   }

   &__svg {
      fill: currentColor;
   }
}

.header__social>.social {
   @include phones {
      display: none;
   }
}