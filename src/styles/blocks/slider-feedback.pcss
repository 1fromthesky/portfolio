.slider-feedback {
   max-width: 930px;
   width: 100%;
   max-height: 500px;
   font-weight: 600;
   margin-top: 90px;
   color: rgba($text-color, .5);
   overflow: hidden;
   @include tablets {
      margin-top: 50px;
   }
   @include phones {
      margin-top: 30px;
   }

   &__window {
      display: flex;
      position: relative;
      right: 0;
      will-change: right;
      transition: right 1s ease-in-out;
   }
}