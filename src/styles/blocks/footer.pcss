.footer {
   background-color: $footer-color;
   padding: 100px 0;
   color: rgba(#ffffff, .3);

   @include desktop {
      padding: 80px 0;
   }
   @include tablets {
      padding: 60px 0;
   }

   &__container {
      display: flex;
      width: 90%;
      
      @include phones {
         flex-direction: column;
      }
   }
}

.footer__social {
   margin-top: 18px;

   .social__item {
      margin-right: 15px;

      &:last-child {
         margin-right: 0;
      }
   }

   .social__link {
      @include circle(50Px, 1px, 'initial');
      position: relative;

      &:hover {
         border-color: $main;
      }
   }

   .social__svg {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
   }
}   

.footer__column-left {
   display: flex;
   flex: 1;
   min-width: 230px;
   @include desktop {
      flex-direction: column;
      flex: 0.6;
      margin-right: 30px;
   }

   .footer__copyright {
      font-size: 48px;
      line-height: 1;
      white-space: nowrap;
      font-weight: 600;
      margin-right: 10%;
      margin-bottom: 15px;
   }

   .footer__data-name {
      font-weight: 600;
      text-transform: uppercase;
      line-height: 1.5;
      color: #fff;
      font-size: 18px;
      display: flex;
      flex-direction: column;

      @include phones {
         flex-direction: row;
         font-weight: 700;
      }
   }

   .footer__data-desc {
      margin-top: 15px;
      display: flex;
      flex-direction: column;
      white-space: nowrap;

      @include phones {
         flex-direction: row;
         font-weight: 700;
      }
   }
}

.footer__column-right {
   display: flex;
   flex-direction: column;
   flex: 2;

   .footer__nav {
      max-width: 800px;
      color: #fff;

      .nav__list {
         justify-content: flex-start;

         @include phones {
            margin: 30px 0 0 -30px;
            width: 300px;
            line-height: 2.5;
            justify-content: flex-start;
            // justify-content: center;
         }
      }
      .nav__item {
         margin-right: 6%;
         @include phones {
            margin: 0 30px;
         }
      }
   }

   .footer__row {
      margin-top: 50px;
      display: flex;
      justify-content: space-between;

      @include tablets {
         flex-direction: column;
      }
   }

   .footer__column-inner-left {
      max-width: 315px;
      margin: 0px 30px 0px 0px;
      @include tablets {
         min-width: 80%;
      }
   }

   .footer__column-inner-right {
      max-width: 420px;
      @include tablets {
         margin-top: 50px;
      }
   }

   .footer__text-sig {
      color: #fff;
      margin-top: 20px;
      font-style: italic;
   }
}