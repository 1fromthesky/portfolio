        section.section.values-section
          .arrow-section.values-section__arrow
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
              polygon(points="0,0 0,100 1000,100")
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
              polygon(points="1000,0 1000,100 0,100")
        section.section.section_flex-column-center.perform-section
          .container
            h2.perform-section__title Мои работы
            .perform-section__content
              .slider-projects
                .slider-projects__wrap
                  .slider-projects__window
                    ul.slider-projects__list
                      li.slider-projects__item.slider-projects__item_activ
                        a.slider-projects__link(href='#')
                          +image('content/pro1.jpg', 'slider-projects__img', 'project-1')
                      li.slider-projects__item
                        a.slider-projects__link(href='#')
                          +image('content/pro2.jpg', 'slider-projects__img', 'project-2')
                      li.slider-projects__item
                        a.slider-projects__link(href='#')
                          +image('content/pro3.jpg', 'slider-projects__img', 'project-3')
                      li.slider-projects__item
                        a.slider-projects__link(href='#')
                          +image('content/pro4.jpg', 'slider-projects__img', 'project-4')
                    .slider-projects__toggles
                      button.toggles__btn.toggles__btn_prev
                      button.toggles__btn.toggles__btn_next
            .description
          .arrow-section.perform-section__arrow
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
              polygon(points="1000,0 1000,100 0,100")
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
              polygon(points="0,0 0,100 1000,100")
        .section-finish

          section.section.section_flex-column-center.feedback
            .container
              .feedback__title-row
                h2.feedback__title Что обо мне говорят
                .feedback__toggles
                  button.feedback__toggles-btn.feedback__toggles-btn_prev
                  button.feedback__toggles-btn.feedback__toggles-btn_next
              .feedback__slider
                ul.feedback__slider-move
                  li.feedback__slider-item
                    .feedback__slider-item-deco
