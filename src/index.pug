<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		title Portfolio
	body
		.wrapper
			.wrapper-container
				.section-start
					section.parallax-mount
						.parallax-mount__layer(data-speed='0.10')
							+image('parallax-mount/sky.png', 'parallax-mount__image')
						.parallax-mount__layer(data-speed='0')
							+image('parallax-mount/mountain.png', 'parallax-mount__image')
						.parallax-mount__layer(data-speed='0.10')
							+image('parallax-mount/baloon.png', 'parallax-mount__image')
						.parallax-mount__layer(data-speed='0.30')
							+image('parallax-mount/cloud.png', 'parallax-mount__image')
						.parallax-mount__layer(data-speed='0.15')
							+image('parallax-mount/man.png', 'parallax-mount__image')
						.parallax-mount__layer(data-speed='0.15')
							+image('parallax-mount/mountain1.png', 'parallax-mount__image')
						.parallax-mount__layer(data-speed='0.15')
							+image('parallax-mount/white.png', 'parallax-mount__image')
					section.section.hero
						.container
							header.header
								.header__logo
									.logo АК
								.header__nav
									nav.nav
										ul.nav__list
											each item in items
												li.nav__item
													a.nav__link(href='#') #{item}
								.header__social
									ul.social
										each item in icons
											li.social__item
												a.social__link(href='#')
													+icon(item, "social__svg")
								.header__burger
									//- .burger-btn_open
									button(type="button").burger-btn
										- for (var i = 1; i <= 3; i++)
											span
							aside.hero-menu
								.hero-menu__container
									.hero-menu__nav
										nav.nav
											ul.nav__list.nav_aside
												each item in items
													li.nav__item
														a.nav__link(href='#') #{item}
									.hero-menu__social
										ul.social
											each item in icons
												li.social__item
													a.social__link(href='#')
														+icon(item, "social__svg")
							.hero__content
								.user-data
									.user-data__desc
										span Личный сайт
										span веб разработчика
									.user-data__name 
										span Name 
										span Surnamt
							button(href='#').hero__scroll-btn.scroll-down-btn Скролл
					section.section.resume-section
						.container.container_smoll
							.resume
								.resume__info
									.resume__avatar
										.avatar
											+image('content/user.jpg', 'avatar__img', 'user_photo')
									ul.resume__info-list
										li.resume__info-item.resume__info-item_left
											p Проживаю:
											p Возраст:
											p Родился:
										li.resume__info-item.resume__info-item_right
											p Проживаю
											p Возраст
											p Родился
								.resume__content
									.resume__disclamer hello world...
