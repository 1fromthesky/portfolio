				section.section.section_flex-column-center.values-section
					.container
						.values-section__about
							h2.values-section__title Чем я могу быть полезен вам
							.values-section__text 
								p Lorem olor sit amet consectetur adipisicing elit. Quo, nobis! Lorem ipsum dolor sit, amet consectetur adipisicing elit. Commodi, cumque!
						.values-section__skills
							.values-section__image
								+image('content/bag.png', 'values-section__img', 'bag-skills')
							#values-component
					.arrow-section.values-section__arrow
						svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
							polygon(points="0,0 0,100 1000,100")
						svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
							polygon(points="1000,0 1000,100 0,100")
				section.section.section_flex-column-center.perform-section
					.container
						h2.perform-section__title Мои работы
						#perform-slider
					.arrow-section.perform-section__arrow
						svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
							polygon(points="1000,0 1000,100 0,100")
						svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
							polygon(points="0,0 0,100 1000,100")
				.section-finish
					.parallax-buddha
						.parallax__layer
							+image('parallax-buddha/background.png', 'parallax__bg')
						.parallax__layer
							+image('parallax-buddha/mount_2.png', 'parallax__mount')
						.parallax__layer
							+image('parallax-buddha/buddha_3.png', 'parallax__buddha')
						.parallax__layer
							+image('parallax-buddha/cloud_4.png', 'parallax__cloud')
						.parallax__layer
							+image('parallax-buddha/cloud_5.png', 'parallax__cloudmid')
						.parallax__layer
							+image('parallax-buddha/cloud_6.png', 'parallax__cloudback')
