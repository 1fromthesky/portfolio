- var items = ["Главаная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
- var icons = ["insta", "vk", "github"];

include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio
  body
    .wrapper
      .wrapper-container
        .section-start

          section.section.hero
            .container
              header.header
                .header__logo
                  .logo АК
                .header__nav
                  nav.nav
                    ul.nav__list
                      each item in items                
                        li.nav__item
                          a.nav__link(href='#') #{item}
                .header__social
                  ul.social
                    each item in icons
                      li.social__item
                        a.social__link(href='#')
                          +icon(item, "social__svg")
              .hero__content
                .user-data
                  .user-data__desc
                    span Личный сайт
                    span веб разработчика
                  .user-data__name 
                    span Name 
                    span Surnamt
              a(href='#').hero__scroll-btn.scroll-down-btn
                .scroll-down-btn__svg-container
                  +icon('scroll', 'scroll-down-btn__svg')
          section.section.resume-section
            .container.container_smoll
              .resume
                .resume__info
                  .resume__avatar
                    .avatar
                      +image('content/user.jpg', 'avatar__img', 'user_photo')
                  ul.resume__info-list
                    li.resume__info-item.resume__info-item_left
                      p Проживаю:
                      p Возраст:
                      p Родился:
                    li.resume__info-item.resume__info-item_right
                      p Проживаю
                      p Возраст
                      p Родился
