section.section.connect
	.container
		h2.connect__title Связаться со мной
		.connect__form
			form.form-connect(
				name='formConnect'
				@submit.prevent="submitForm"
				)
				.form-connect__row
					label.form-connect__label.form-connect__label_username(
						:class="{error: !nameValid}"
						v-bind:data-error-value="currentMassegeName")
						input.form-connect__input.form-connect__input_username(
							type='text'
							name='username'
							required=""
							autocomplete="off"
							@input="validateName"
							)
						.form-connect__title Введите ваше имя
						.form-connect__icon-wrap
							+icon('user', 'form-connect__icon')
					label.form-connect__label.form-connect__label_email(
						:class="{error: !emailValid}"
						v-bind:data-error-value="currentMassegeEmail"
						)
						input.form-connect__input.form-connect__input_email(
							type='email'
							name='email'
							required=""
							autocomplete="off"
							@input="validateEmail"
							)
						.form-connect__title Введите ваш email
						.form-connect__icon-wrap
							+icon('envelope', 'form-connect__icon')
				.form-connect__row
					label.form-connect__label.form-connect__label_comment(
						:class="{error: !commentValid}"
						v-bind:data-error-value="currentMassegeComment"
						)
						textarea.form-connect__input.form-connect__input_comment.form-connect__textarea(
							name='comment'
							required=""
							autocomplete="off"
							@input="validateComment"
							)
						.form-connect__title Сообщение к письму
						.form-connect__icon-wrap
							+icon('message', 'form-connect__icon')
				.form-connect__row.form-connect_btn
					button.btn(@click.prevent="submitForm" name="btn-submit") Отправить
	.overlay
		.overlay__container
			.overlay__content
				.overlay__title {{resultMassege}}
				.overlay__btn-wrap
					.overlay__btn Закрыть