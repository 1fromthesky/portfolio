   var projects = [
      ['pro1.jpg', 'project-1', '#', ''],
      ['pro2.jpg', 'project-2', '#', ''],
      ['pro3.jpg', 'project-3', '#', ''],
      ['pro4.jpg', 'project-4', '#', 'slider-projects__item_active'],
   ];

-  var skillTag = ['HTML5','CSS3','JavaScript']

-  var descCard = ['title project','about project','hiperkink']
