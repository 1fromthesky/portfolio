section.section.section_flex-column-center.perform-section
   .container
      h2.perform-section__title Мои работы
      .perform-section__content
         .slider-projects
            .slider-projects__wrap
               .slider-projects__number 4
                  //- p #{item[]}
               .slider-projects__window
                  +image('content/pro4.jpg', 'slider-projects__img', 'link')
               ul.slider-projects__list
                  each item in projects
                     li.slider-projects__item(class=`${item[3]}`)
                        a.slider-projects__link(href=`${item[2]}`)
                           +image('content/'+item[0], 'slider-projects__img', item[1])
               .slider-projects__toggles
                  a.slider-projects__toggles-btn.toggles__btn_prev
                     +icon('arrow-down', 'toggles-svg-prev toggles-svg-prev_up')
                  a.slider-projects__toggles-btn.toggles__btn_next
                     +icon('arrow-down', 'toggles-svg-next toggles-svg-next_down')
         .perform-section__description
            .description
               ul.description__list
                  each tag in skillTag
                     li.description__item
                        .description__tag
                           p #{tag}
               h3.description__title #{descCard[0]} Lorem ipsum dolorsitamet
               .description__text
                  p #{descCard[1]} Lorem ipsum dolor sit amet consectetur adipisicing elit. Beatae, perspiciatis earum ea incidunt vel harum quisquam reiciendis nostrum mollitia tempore.
               a.description__link(href=`${descCard[2]}`)
                  .description__link-icon
                  span Просмотреть сайт
   .arrow-section.perform-section__arrow
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
         polygon(points="1000,0 1000,100 0,100")
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").arrow-section__item.arrow
         polygon(points="0,0 0,100 1000,100")